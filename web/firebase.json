{
  "hosting": {
		"site": "ecommerce-shop-go-react.web.app",
    "public": "./out",
    "ignore": [
      "firebase.json", 
      "__/**",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      },
      {
        "source": "/api/checkouts{,/**}",
        "run": {
          "serviceId": "checkouts-http",
          "region": "asia-southeast1"
        }
      },
      {
        "source": "/api/orders{,/**}",
        "run": {
          "serviceId": "orders-http",
          "region": "asia-southeast1"
        }
      },
      {
        "source": "/api/products{,/**}",
        "run": {
          "serviceId": "products-http",
          "region": "asia-southeast1"
        }
      },
      {
        "source": "/api/users{,/**}",
        "run": {
          "serviceId": "users-http",
          "region": "asia-southeast1"
        }
      }
    ]
  }
}